<%- include("header") -%>

<div class="box" id="heading">
  <h1>Todo List App <br> <%= jsDay %> </h1>
</div>

<div class="box">
  <ul>
    <% for(let i = 0; i < list.length; i++) { %>
    <div class="item">
      <input type="checkbox">
      <p><%= list[i] %></p>
    </div>
    <% } %>
  </ul>
  <form class="item" method="post" action="/">
    <input type="text" name="task" placeholder="Add a task" autocomplete="off">
    <button type="submit">+</button>
  </form>
</div>

<%- include("footer") -%>
